#include <iostream>

class Array {
private:
    int* arr;
    int size;

public:
    Array(int size) {
        this->size = size;
        arr = new int[size];
    }

    void displayAddresses() {
        for (int i = 0; i < size; i++) {
            std::cout << "Address of element at index " << i << ": " << &arr[i] << std::endl;
        }
    }
};

int main() {
    int size = 5;
    Array arr(size);

    arr.displayAddresses();

    return 0;
}
